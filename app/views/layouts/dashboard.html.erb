<!DOCTYPE html>
<html>
  <head>
    <title>EduOnline</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag "application_dashboard", media: "all",
      :"data-turbolinks-track" => "reload" %>
    <%= javascript_include_tag "application_dashboard",
      :"data-turbolinks-track" => "reload" %>
  </head>

  <body>
    <%= render "layouts/admin/admin_header" %>
    <div class="content">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
          <%= message %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
