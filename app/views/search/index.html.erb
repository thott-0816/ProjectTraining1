<span hidden id="key-search"><%= params[:search].strip %></span>
<div class="container">
  <div class="row mt-40">
    <%= form_tag search_index_path, method: :GET, remote: true, class: "form-horizontal" do %>
      <div class="col-sm-11">
        <%= text_field_tag :search, "", placeholder: t("search.search"), class: "form-control",required: true %>
      </div>
      <button type="submit" class="btn btn-default"><%= t "search.search" %></button>
    <% end %>
  </div>
  <hr>
  <div class="row">
    <div class="well">
      <h1 class="text-center"><%= t "search.list_course" %></h1>
      <div class="list-group list-course">
        <%= render "item_search" %>
      </div>
      <div class="page-course page-center">
        <%= render partial: "paginate_search", object: @list_course_search, as: "page"  %>
      </div>
    </div>
	</div>
  <div class="row">
    <div class="well">
      <h1 class="text-center"><%= t "search.list_user" %></h1>
      <div class="list-group list-user">
        <%= render "user_search" %>
      </div>
      <div class="page-user page-center">
        <%= render partial: "paginate_search", object: @list_user_search, as: "page"  %>
      </div>
    </div>
  </div>
</div>
